<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/frame"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/text1"
            android:background="@drawable/frame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="书名:"
                android:textSize="25sp"
                android:textColor="@color/colorBlack"/>
            <TextView
                android:id="@+id/leasebook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="test"
                android:textSize="25sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/text2"
            android:background="@drawable/frame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text1"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="325dp"
                android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="租户:"
                android:textSize="25sp"
                android:textColor="@color/colorBlack"/>
            <TextView
                android:id="@+id/leaser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="test"
                android:singleLine="true"
                android:textSize="25sp" />
            </LinearLayout>
            <LinearLayout
                android:background="@drawable/frame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/leaserid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:singleLine="true"
                    android:text="test"
                    android:textSize="25sp" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/text3"
            android:background="@drawable/frame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text2"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="联系方式:"
                android:textSize="25sp"
                android:textColor="@color/colorBlack"/>

            <TextView
                android:id="@+id/leasercontact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="test"
                android:textSize="25sp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/text4"
            android:background="@drawable/frame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text3"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="地址:"
                android:textSize="25sp"
                android:textColor="@color/colorBlack"/>
            <TextView
                android:id="@+id/leaseraddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="test"
                android:maxLines="3"
                android:textSize="25sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>